	"version": "0.2.0",
	"configurations": [
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Front-End in Chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Back-end",
			"program": "${workspaceFolder}/backend/index.js"
		}
	],
	"compounds": [
		{
			"name": "Run all",
			"configurations": ["Run Back-end", "Launch Front-End in Chrome"]
		}
	]
}